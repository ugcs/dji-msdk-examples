<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0">
    <!--android:background="#101010"-->
    <!-- android:layout_below="@+id/main_indicators_fragment_container" -->

    <FrameLayout
        android:id="@+id/main_indicators_fragment_extra_distance"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/black" >

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/main_video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_indicators_fragment_extra_distance"
        android:elevation="1dp">

        <com.example.ugcssample.fragment.VideoViewFragment
            android:id="@+id/video_view_primary_video_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/main_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:elevation="1000dp">

            <Button
                android:id="@+id/btn_simulator"
                style="@style/Button"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_marginEnd="5dp"
                android:enabled="false"
                android:text="Start Simulator" />

            <Button
                android:id="@+id/btn_upload_mission"
                style="@style/Button"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_marginEnd="5dp"
                android:enabled="false"
                android:text="Upload mission" />

            <Button
                android:id="@+id/btn_start_mission"
                style="@style/Button"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_marginEnd="5dp"
                android:enabled="false"
                android:text="Start mission" />

            <Button
                android:id="@+id/btn_takeoff"
                style="@style/Button"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_marginEnd="5dp"
                android:enabled="false"
                android:text="Takeoff" />

            <Button
                android:id="@+id/btn_land"
                style="@style/Button"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_marginEnd="5dp"
                android:enabled="false"
                android:text="Land (key)" />

            <Button
                android:id="@+id/btn_land_2"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_marginEnd="5dp"
                android:enabled="false"
                android:text="Land (direct)"
                style="@style/Button" />

        </LinearLayout>

        <TextView

            android:id="@+id/mission_debug_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:background="#FFF"
            android:padding="8dp"
            android:text="Mission info" />

    </RelativeLayout>

</RelativeLayout>